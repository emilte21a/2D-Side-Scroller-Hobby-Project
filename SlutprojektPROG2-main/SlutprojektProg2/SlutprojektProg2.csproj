<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Raylib-cs" Version="6.0.0" />
    <PackageReference Include="Raylib-CsLo" Version="4.2.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\**\*.*" CopyToOutputDirectory="Always" />
    <Content Include="Audio\**\*.*" CopyToOutputDirectory="Always" />
    <Content Include="Script\**\*.*" CopyToOutputDirectory="Always" />
  </ItemGroup>
</Project>
